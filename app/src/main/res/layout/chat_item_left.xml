<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10px">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="160px"
            android:layout_height="160px"
            android:src="@drawable/tuijian_touxiang6" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:lineSpacingExtra="2px"
            android:layout_marginRight="160px"
            android:layout_toRightOf="@+id/iv_header"
            android:background="@drawable/im_other_item_bg_normal"
            android:text="100000000000000000000000000000000000000000000011"
            android:textColor="@color/black"
            android:textSize="36px" />

    </RelativeLayout>
</RelativeLayout>